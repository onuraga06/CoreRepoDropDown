@model CoreGenericRepo.Models.Entity.MovieCategoryModel
@{
	ViewData["Title"] = "Ekle";
}

@using (Html.BeginForm())
{
	@Html.AntiForgeryToken()
<div class="form-horizontal m-2">

	<hr />
	@Html.ValidationSummary(true, "", new { @class = "text-danger" })
	<div class="form-group fw-bold">
		@Html.LabelFor(m => m.movie.MovieName, htmlAttributes: new { @class = "control-label cod-md-2" })
		<div class="col-md-10">
			@Html.EditorFor(m => m.movie.MovieName, new { htmlAttributes = new { @class = "form-control" } })
		</div>
	</div>
	<div class="form-group fw-bold">
		@Html.LabelFor(m => m.movie.Description, htmlAttributes: new { @class = "control-label cod-md-2" })
		<div class="col-md-10">
			@Html.EditorFor(m => m.movie.Description, new { htmlAttributes = new { @class = "form-control" } })
		</div>
	</div>
	<div class="form-group fw-bold">
		@Html.LabelFor(m => m.movie.Image, htmlAttributes: new { @class = "control-label cod-md-2" })
		<div class="col-md-10">
			@Html.EditorFor(m => m.movie.Image, new { htmlAttributes = new { @class = "form-control" } })
			<p>Örnek=1.jpg</p>
		</div>
	</div>


	<div class="form-group fw-bold">
		@Html.LabelFor(m => m.movie.MovieCategoryID, htmlAttributes: new { @class = "control-label cod-md-2" })
		<div class="col-md-10">
			@Html.DropDownListFor(m => m.movie.MovieCategoryID, Model.selectListItems, new { @class = "form-control"  })
		</div>
	</div>
</div>
	<br />
	<div class="form-group">
		<input type="submit" value="Ekle" class="btn btn-primary" />
		<a href="/Product/Index" class="btn btn-success">Listeye Geri Don</a>
	</div>
}

